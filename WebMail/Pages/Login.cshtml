@page
@model WebMail.Pages.LoginModel
@{
}

<div class="container border border-muted shadow loginContainer d-flex justify-content-center">
    <form method="post">
        <div class="inputContainer">
            <img src="~/perm_identity_black_24dp.svg" alt="Email" />
            <input class="Input" type="text" asp-for="Email" />
        </div>
        <div class="inputContainer">
            <img src="~/lock_black_24dp.svg" alt="Password" />
            <input class="Input" type="password" asp-for="Password" />
        </div>
        <input type="submit" value="Login" class="d-block btn btn-primary mr-auto ml-auto mt-2" />
    </form>
</div>