@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="container border border-muted rounded p-3 shadow">
    <div class="container MailPanel">
        @for (int i = Model.Mail.Count - 1; i >= 0; i--)
        {
            <a class="mailbut" asp-page="Mail" asp-route-count="@i">
                <div class="row border-bottom p-2 mail">
                    <div class="col"><span class="d-block">"@Model.Mail[i].Name"</span><span>(@Model.Mail[i].Email)</span></div>
                    <div class="col"><span>@Model.Mail[i].Subject</span></div>
                    <div class="col text-right"><span>@Model.Mail[i].Date</span></div>
                </div>
            </a>
        }
    </div>
</div>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header ">
                    <input class="w-75 border-0" type="email" asp-for="Receiver" placeholder="Modtager" />
                </div>
                <div class="modal-header ">
                    <input class="w-75 border-0" type="text" asp-for="Subject" placeholder="Emne" />
                </div>
                <div class="modal-body">
                    <textarea class="border-0 w-100 InputMessage" asp-for="Message" placeholder="Besked"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-primary">Send</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Luk</button>
                </div>
            </form>
        </div>
    </div>
</div>